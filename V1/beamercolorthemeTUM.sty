\mode<presentation>

\definecolor{TUM_blau}{rgb}{0,0.3961,0.7411}
\definecolor{TUM_blau_0}{HTML}{0065BD}
\definecolor{TUM_blau_1}{HTML}{003359}
\definecolor{TUM_blau_2}{HTML}{005293}
\definecolor{TUM_blau_3}{HTML}{0073CF}
\definecolor{TUM_blau_4}{HTML}{64A0C8}
\definecolor{TUM_blau_5}{HTML}{98C6EA}
\definecolor{TUM_gruen}{HTML}{A2AD00}
\definecolor{TUM_orange}{HTML}{E37222}
\definecolor{TUM_elfenbein}{HTML}{DAD7CB}

\setbeamercolor{section in head/foot}{fg=white,bg=red}

\setbeamercolor{structure}{fg=TUM_blau_2}
\setbeamercolor{section in head/foot}{use=structure,bg=TUM_blau_2}
\setbeamercolor{alerted text}{fg=TUM_orange}
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{example text}{fg=TUM_gruen}

\setbeamercolor{block title}{use=structure,fg=white,bg=structure.fg!100!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!100!black}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!8!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

\setbeamercolor{titlecolor}{fg=TUM_blau_2,bg=white}
\setbeamercolor{frametitle}{fg=TUM_blau_2}

\setbeamercolor*{palette primary}{use=structure,fg=white,bg=structure.fg}
\setbeamercolor*{palette secondary}{use=structure,fg=white,bg=structure.fg!75!black}
\setbeamercolor*{palette tertiary}{use=structure,fg=white,bg=structure.fg!50!black}
\setbeamercolor*{palette quaternary}{fg=white,bg=black}

\mode<all>
